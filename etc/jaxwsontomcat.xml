<project name="JAX-WS 2.0 On Tomcat" default="help" basedir=".">
	<target name="install">
		<property environment="env" />
        <property name="verbose" value="false"/>

        <echo message="Installing JAX-WS 2.0 on ${env.CATALINA_HOME} ..." />
		
		<copy toDir="${env.CATALINA_HOME}/shared/lib" overwrite="true" verbose="${verbose}">
			<fileset dir="lib">
				<include name="*.jar"/>
			</fileset>
		</copy>

		<echo message="... done."/>
	</target>

    <target name="help">
        <echo message="install:    Installs the JAX-WS 2.0 on Tomcat 5.5.x"/>
        <echo message="            Usage: ant install"/>
        <echo message="                   Make sure CATALINA_HOME is set to Tomcat root directory."/>
    </target>
</project>
