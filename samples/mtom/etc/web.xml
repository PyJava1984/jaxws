<web-app>
  <display-name>mtom.hello</display-name>
  <description>mtom.hello</description>
  <listener>
    <listener-class>com.sun.xml.ws.transport.http.servlet.WSContextListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>hello</servlet-name>
    <display-name>hello</display-name>
    <description>JAX-WS endpoint - mtom.hello</description>
    <servlet-class>com.sun.xml.ws.transport.http.servlet.JAXRPCServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>hello</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>60</session-timeout>
  </session-config>
</web-app>
